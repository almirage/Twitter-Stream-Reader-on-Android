<?xml version="1.0" encoding="utf-8"?>
<!-- 
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:layout_width="fill_parent">
-->
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" android:id="@+id/linearLayout1"
		android:layout_width="fill_parent" android:orientation="horizontal" android:background="@color/white">

	<ImageView
			android:src="@drawable/icon" 
			android:id="@+id/tweetIcon" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:padding="6px"
			></ImageView>
	
	<LinearLayout
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true" android:id="@+id/linearLayout2"
			android:layout_width="fill_parent" android:orientation="vertical" android:background="@color/white">
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/nameText"
				android:textColor="@color/black"
				android:textSize="17px"
				android:textStyle="bold"
				></TextView>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:id="@+id/tweetText" 
				android:textColor="@color/black"
				android:textSize="18px"
				></TextView>
		<TextView 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:id="@+id/metaText" 
				android:textColor="@color/gray"
				android:textSize="16px"
				></TextView>
	</LinearLayout>
</LinearLayout>
